@page
@model razor.Pages.DashboardModel
@{
ViewData["Title"] = "Admin Dashboard";
}

<h4>
    Admin Dashboard
</h4>
<table class="table">
    <thead>
        <tr>
            <td>Name</td>
            <td>Email</td>
            <td>Roles</td>
            <td>Toggle Admin</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in @Model.Users)
        {
        <tr>
            <td><a href="/Admin/UserDetails/@user.User.Id">@user.User.FullName</a></td>
            <td>@user.User.Email</td>
            <td>@String.Join(", " , @user.Roles) </td>
            <td>
                <form method="post">
                    <button formaction="?handler=AdminToggle&userId=@user.User.Id" type="submit">
                        @(user.isAdmin ? "Set Normal User" : "Set Admin")
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
