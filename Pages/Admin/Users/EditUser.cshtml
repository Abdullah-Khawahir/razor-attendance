@page "/Admin/Users/EditUser/{userId:Guid}"
@model EditUserModel
@{
ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">

        <div class="container">
            <div class="row">
                <label asp-for="Input.Email" class="control-label"></label>

                <div class="col-sm">
                    <input disabled asp-for="AppUser.Email" class="form-control  col-sm" />
                </div>

                <div class="col-sm">
                    <input asp-for="Input.Email" class="form-control col-sm" />
                </div>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>


        <div class="container">
            <div class="row">
                <label asp-for="Input.FullName" class="control-label"></label>

                <div class="col-sm">
                    <input disabled asp-for="AppUser.FullName" class="form-control  col-sm" />
                </div>

                <div class="col-sm">
                    <input asp-for="Input.FullName" class="form-control col-sm" />
                </div>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="container">
                <div class="row">
                    <label asp-for="Input.Password" class="control-label"></label>
                    <!-- <div class="col-sm"> -->
                    <!--     <input disabled asp-for="AppUser.Password" class="form-control  col-sm" /> -->
                    <!-- </div> -->

                    <div class="col-sm">
                        <input asp-for="Input.Password" type="password" class="form-control col-sm" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

            </div>


            <div class="container">
                <div class="row">
                    <button type="submit" class="btn btn-primary mt-2">Save</button>
                    <a asp-page="/Admin/Dashboard" class="btn btn-secondary mt-2">Cancel</a>
                </div>
            </div>
        </div>

</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
