@page
@model razor.Pages.ProfileModel
@{
}
<div>
    <p>Name: @Model.UserDetails.User.FullName</p>
    <p>Email: @Model.UserDetails.User.Email</p>
    <p>Created At: @Model.UserDetails.User.CreatedAt</p>
    <p>Weekly Hours: @Model.UserDetails.WeeklyHours</p>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Date</th>
            <th>Check In</th>
            <th>Check Out</th>
            <th>Late?</th>
            <th>Early Leave?</th>
            <th>Check In Note</th>
            <th>Check Out Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendance in Model.UserDetails.User.AttendanceRecords)
        {
        <tr>
            <td>@attendance.Date.ToShortDateString()</td>
            <td>@attendance.CheckInTime?.ToString("HH:mm")</td>
            <td>@attendance.CheckOutTime?.ToString("HH:mm")</td>
            <td>@(attendance.IsLate ? "Yes" : "No")</td>
            <td>@(attendance.IsEarlyLeave ? "Yes" : "No")</td>

            <td>@(attendance.CheckInNote ?? "-")</td>
            <td>@(attendance.CheckOutNote ?? "-")</td>
        </tr>
        }
    </tbody>
</table>

